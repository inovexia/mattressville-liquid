{% comment %} 
  Renders social icons.
  Accepts: 
  - class: {String} a class to be added to the <ul> element (optional).
 
  Usage:
  {% render 'header-social-icons', 
  class: 'my-class'
  %} 
{% endcomment %}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .header-social-icons {
    display: none;

    /*
   border-left: 2px solid #e6e6e6; 
   border-right: 2px solid #e6e6e6;
*/
  }

  @media (min-width: 990px) {
    .header-social-icons {
      display: flex;
      margin-right: 10px;
    }

    .list-social__item {}

  .list-social__link {
    text-decoration: none;
  }

  .list-social__link .gsi {
    font-size: 16px;
    color: #fff;
  }
}
{%- endstyle -%}

<ul class="header-social-icons list-unstyled list-social{% if class %} {{ class}}{% endif %}" role="list">
  {%- if settings.social_facebook_link != blank -%}
    <li class="list-social__item">
      <a
        href="{{ settings.social_facebook_link }}"
        class="link list-social__link"
        aria-label="Read more about {{ 'general.social.links.facebook' | t }}">
        <i class="gsi gs-facebook-alt"></i>
        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
  {%- endif -%}
