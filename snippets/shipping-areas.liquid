{% comment %}
  {{ product.metafields.meta_data.softness_score }}
  Renders product shipping-areas.
  Accepts:
  - product: {Object} product object

  Usage:
  {% render 'shipping-areas', product: product %}
  <a href="#expand" class="expand">Show more details</a>
  <a href="#collapse" class="collapse">Show less details</a>
{% endcomment %}
{{ 'shipping-areas.css' | asset_url | stylesheet_tag }}
{%- if product.metafields.meta_data.shipping_areas != blank -%}
  <div class="shipping-areas">
    <h4>
      <strong>{{ product.metafields.meta_data.shipping_areas }}</strong>
    </h4>
  </div>
{%- endif -%}

