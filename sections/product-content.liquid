                    </tr>
                    {%- if product.metafields.custom.model != blank -%}
                      <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Model</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.model }}</th>
                    </tr>
                    {% endif %}
                    {%- if product.metafields.custom.style != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Style</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.style }}</th>
                    </tr>
                  {% endif %}
                  {%- if product.metafields.custom.firmness != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Firmness</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.firmness }}</th>
                    </tr>
                  {% endif %}
                    {%- if product.metafields.custom.mattress_height != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Mattress Height</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.mattress_height }}</th>
                    </tr>
                  {% endif %}
                    {%- if product.metafields.custom.collection != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Collection</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.collection }}</th>
                    </tr>
                  {% endif %}
                    {%- if product.metafields.custom.coil_type != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Coil Type</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.coil_type }}</th>
                    </tr>
                  {% endif %}
                    {%- if product.metafields.custom.recommended_for != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Recommended for</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.recommended_for }}</th>
                    </tr>
                  {% endif %}
                    {%- if product.metafields.custom.warranty != blank -%}
                    <tr>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">Warranty</th>
                      <th style="border-bottom:1px solid !important;border-left:1px solid !important;border-right:1px solid !important;border-top:1px solid !important;padding:8px;vertical-align:top;">{{ product.metafields.custom.warranty }}</th>
                    </tr>
                  {% endif %}
                  </tbody>
                </table>
                  {%- if product.metafields.custom.product_table_description != blank -%}
                <p><i>{{ product.metafields.custom.product_table_description }}</i></p>
              {% endif %}
              </div>
            {% endif %}
        </div>
      </div>
      <div id="tabpane-features" class="tab-pane">
        <div class="tab-container">
          {{ product.metafields.meta_data.features_tab }}
        </div>
      </div>
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when '@app' -%}
            <div id="tabpane-reviews" class="tab-pane">
              <div class="tab-container">
                {% render block %}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>
{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  var tabs = document.querySelectorAll('.product-content .tab');
  tabs.forEach(function(tab) {
    tab.addEventListener('click', function(e) {
      e.preventDefault();
      var href = this.getAttribute('href');
      var activeTab = document.querySelector('.product-content .tabs .tab.active');
      var activeTabContent = document.querySelector('.product-content .tab-content .tab-pane.active');
      if (activeTab) {
        activeTab.classList.remove('active');
      }
      if (activeTabContent) {
        activeTabContent.classList.remove('active');
      }
      this.classList.add('active');
      document.querySelector(href).classList.add('active');
    });
  });
});
{% endjavascript %}
