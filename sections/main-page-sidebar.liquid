{%- style -%}
  .page-title {
    font-weight: 700;
    font-size: 36px;
    color: var(--secondary-color);
    margin: 23px 0 27px 0;
    position: relative;
  }

  .page-title::after{
    content: "";
    display: inline-block;
    width: 80px;
    position: absolute;
    border-bottom: 2px solid var(--accent-color);
    left: 0;
    bottom: -5px;
  }

  .content-{{ section.id }}-padding {
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .content-{{ section.id }}-padding {
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section">
  <div class="page-header header-{{ section.id }}-padding">
    <div class="page-width page-width-no-padding">
      <h1 class="page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        {{ page.title | escape }}
      </h1>
    </div>
  </div>
  <div class="page-content content-{{ section.id }}-padding">
    <div class="page-width page-width-no-padding">
      <div class="content rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Page Header"
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Header Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#ff5c78"
    },
    {
      "type": "range",
      "id": "header_bg_color_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Header Background Color Opacity",
      "default": 60
    },
    {
      "type": "image_picker",
      "id": "header_bg_image",
      "label": "Header Background Image"
    },
    {
      "type": "header",
      "content": "Header Padding"
    },
    {
      "type": "range",
      "id": "header_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 70
    },
    {
      "type": "range",
      "id": "header_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 70
    },
    {
      "type": "header",
      "content": "Header Margin"
    },
    {
      "type": "range",
      "id": "header_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content Padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
